<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TPApp.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout Margin="15" Padding="30, 60, 30, 30">
        <Label Text="Please log in" FontSize="30" TextColor="#3E8E56" WidthRequest="300"/>

        <Label Text="Username" TextColor="GhostWhite" WidthRequest="300"/>
        <Entry x:Name="UsernameEntry" Placeholder="Enter username" TextColor="GhostWhite" WidthRequest="300"/>

        <Label Text="Password" TextColor="GhostWhite" WidthRequest="300"/>
        <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True" TextColor="#D8B446" WidthRequest="300"/>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Padding="0,5,0,0">
            <Button Text="Log in" BackgroundColor="#4A6E8A" Clicked="LoginButton_Clicked" HorizontalOptions="Fill" WidthRequest="150"/>
            <Button Text="Register" BackgroundColor="#4A6E8A" Clicked="LoginButton_Clicked" HorizontalOptions="Fill" WidthRequest="150"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>


</ContentPage>